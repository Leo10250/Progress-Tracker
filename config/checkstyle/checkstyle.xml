<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
    "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
    "configuration_1_3.dtd">

<module name="Checker">
  <!-- default severity for all rules -->
  <property name="severity" value="warning"/>

  <!-- AST-based rules (run only on Java syntax) -->
  <module name="TreeWalker">

    <!-- forbid wildcard “*” imports -->
    <module name="AvoidStarImport"/>

    <!-- require braces around every if/for/while block -->
    <module name="NeedBraces"/>

    <!-- { placement rules: “same line” for most constructs -->
    <module name="LeftCurly"/>

    <!-- } placement rules (matching the opening brace style) -->
    <module name="RightCurly"/>

    <!-- space *after* commas, semicolons, keywords like “return” -->
    <module name="WhitespaceAfter"/>

    <!-- no stray space right *before* “,” “;” “++” etc. -->
    <module name="NoWhitespaceBefore"/>

    <!-- package name = all lowercase with dots -->
    <module name="PackageName"/>

    <!-- class / interface names = PascalCase -->
    <module name="TypeName"/>

    <!-- method names = camelCase -->
    <module name="MethodName"/>

    <!-- field (member) names = camelCase -->
    <module name="MemberName"/>

    <!-- parameter names = camelCase -->
    <module name="ParameterName"/>

    <!-- local variable names = camelCase -->
    <module name="LocalVariableName"/>

    <!-- 1 public/top-level class per .java file -->
    <module name="OneTopLevelClass"/>

  </module> <!-- /TreeWalker -->
</module>   <!-- /Checker -->
